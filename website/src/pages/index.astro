---
import Layout from "../layouts/Layout.astro";

// Get admin registration URL from environment
const adminRegisterUrl =
    import.meta.env.PUBLIC_ADMIN_REGISTER_URL ||
    "https://a.letsorder.app/register";
---

<Layout
    title="letsorder - Complete Menu Management & Ordering for Restaurants"
    description="Streamline your restaurant operations with QR code menus, instant ordering, and powerful management tools. Start your 30-day free trial today."
>
    <!-- Hero Section -->
    <section class="bg-gradient-to-r from-gray-800 to-gray-900 text-white">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-24">
            <div class="text-center">
                <h1 class="text-5xl md:text-7xl font-light font-heading mb-6">
                    Complete Menu Management & Ordering for Restaurants
                </h1>
                <p
                    class="text-xl md:text-2xl mb-8 text-gray-200 max-w-3xl mx-auto"
                >
                    Streamline your restaurant operations with QR code menus,
                    instant ordering, and powerful management tools. No payment
                    integration needed.
                </p>
                <div class="flex flex-col sm:flex-row gap-4 justify-center">
                    <a
                        href={adminRegisterUrl}
                        class="bg-white text-gray-800 px-8 py-4 rounded-lg text-lg font-semibold hover:bg-gray-100 transition-colors"
                    >
                        Get Started for Free
                    </a>
                    <a
                        href="/live-demo"
                        class="border-2 border-white text-white px-8 py-4 rounded-lg text-lg font-semibold hover:bg-white hover:text-gray-800 transition-colors"
                    >
                        Live Demo
                    </a>
                </div>
                <p class="mt-4 text-gray-300">
                    30-day free trial â€¢ No credit card required
                </p>
            </div>
        </div>
    </section>

    <!-- Screenshots Carousel -->
    <section class="py-16 bg-white">
        <!-- Header with container for desktop -->
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mb-12">
            <div class="text-center">
                <h2 class="text-3xl font-bold font-heading text-gray-900 mb-4">
                    See letsorder in Action
                </h2>
                <p class="text-lg text-gray-600">
                    Experience our intuitive admin and menu interfaces designed
                    for modern restaurants
                </p>
            </div>
        </div>

        <!-- Carousel Container - Full width on mobile, contained on desktop -->
        <div class="relative">
            <!-- Desktop: Container with padding -->
            <div class="hidden sm:block max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                <div
                    id="screenshot-carousel-desktop"
                    class="overflow-hidden rounded-lg"
                >
                    <div
                        class="flex transition-transform duration-500 ease-in-out"
                        id="carousel-container"
                    >
                        <!-- Admin Screenshot -->
                        <div class="w-full flex-shrink-0 px-4">
                            <div class="max-w-xs mx-auto">
                                <img
                                    src="/screenshots/LetsOrder_Admin_Dashboard.png"
                                    alt="Admin Dashboard Screenshot"
                                    class="w-full h-auto rounded-lg shadow-lg border border-gray-200"
                                />
                                <div class="text-center mt-4">
                                    <h3
                                        class="text-lg font-semibold font-heading text-gray-900 mb-2"
                                    >
                                        Admin Dashboard
                                    </h3>
                                    <p class="text-sm text-gray-600">
                                        Manage menus, tables, and orders with
                                        ease
                                    </p>
                                </div>
                            </div>
                        </div>

                        <!-- Menu Screenshot -->
                        <div class="w-full flex-shrink-0 px-4">
                            <div class="max-w-xs mx-auto">
                                <img
                                    src="/screenshots/LetsOrder_Guest_Menu.png"
                                    alt="Guest Menu Screenshot"
                                    class="w-full h-auto rounded-lg shadow-lg border border-gray-200"
                                />
                                <div class="text-center mt-4">
                                    <h3
                                        class="text-lg font-semibold font-heading text-gray-900 mb-2"
                                    >
                                        Guest Menu
                                    </h3>
                                    <p class="text-sm text-gray-600">
                                        Mobile-friendly ordering experience
                                    </p>
                                </div>
                            </div>
                        </div>

                        <!-- QR Code Screenshot -->
                        <div class="w-full flex-shrink-0 px-4">
                            <div class="max-w-xs mx-auto">
                                <img
                                    src="/screenshots/LetsOrder_Admin_QR_Codes.png"
                                    alt="QR Codes Screenshot"
                                    class="w-full h-auto rounded-lg shadow-lg border border-gray-200"
                                />
                                <div class="text-center mt-4">
                                    <h3
                                        class="text-lg font-semibold font-heading text-gray-900 mb-2"
                                    >
                                        QR Codes
                                    </h3>
                                    <p class="text-sm text-gray-600">
                                        Generate and manage table QR codes
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Desktop Navigation Buttons -->
                <button
                    id="prev-btn"
                    class="absolute left-4 top-1/2 transform -translate-y-1/2 bg-white shadow-lg rounded-full p-2 text-gray-600 hover:text-gray-800"
                >
                    <svg
                        class="w-6 h-6"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M15 19l-7-7 7-7"></path>
                    </svg>
                </button>
                <button
                    id="next-btn"
                    class="absolute right-4 top-1/2 transform -translate-y-1/2 bg-white shadow-lg rounded-full p-2 text-gray-600 hover:text-gray-800"
                >
                    <svg
                        class="w-6 h-6"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M9 5l7 7-7 7"></path>
                    </svg>
                </button>
            </div>

            <!-- Mobile: Full width carousel -->
            <div class="sm:hidden">
                <div id="screenshot-carousel-mobile" class="overflow-hidden">
                    <div
                        class="flex transition-transform duration-500 ease-in-out"
                        id="carousel-container-mobile"
                    >
                        <!-- Admin Screenshot -->
                        <div class="w-full flex-shrink-0 px-4">
                            <div class="max-w-sm mx-auto">
                                <img
                                    src="/screenshots/LetsOrder_Admin_Dashboard.png"
                                    alt="Admin Dashboard Screenshot"
                                    class="w-full h-auto rounded-lg shadow-lg border border-gray-200"
                                />
                                <div class="text-center mt-4">
                                    <h3
                                        class="text-lg font-semibold font-heading text-gray-900 mb-2"
                                    >
                                        Admin Dashboard
                                    </h3>
                                    <p class="text-sm text-gray-600">
                                        Manage menus, tables, and orders with
                                        ease
                                    </p>
                                </div>
                            </div>
                        </div>

                        <!-- Menu Screenshot -->
                        <div class="w-full flex-shrink-0 px-4">
                            <div class="max-w-sm mx-auto">
                                <img
                                    src="/screenshots/LetsOrder_Guest_Menu.png"
                                    alt="Guest Menu Screenshot"
                                    class="w-full h-auto rounded-lg shadow-lg border border-gray-200"
                                />
                                <div class="text-center mt-4">
                                    <h3
                                        class="text-lg font-semibold font-heading text-gray-900 mb-2"
                                    >
                                        Guest Menu
                                    </h3>
                                    <p class="text-sm text-gray-600">
                                        Mobile-friendly ordering experience
                                    </p>
                                </div>
                            </div>
                        </div>

                        <!-- QR Code Screenshot -->
                        <div class="w-full flex-shrink-0 px-4">
                            <div class="max-w-sm mx-auto">
                                <img
                                    src="/screenshots/LetsOrder_Admin_QR_Codes.png"
                                    alt="QR Codes Screenshot"
                                    class="w-full h-auto rounded-lg shadow-lg border border-gray-200"
                                />
                                <div class="text-center mt-4">
                                    <h3
                                        class="text-lg font-semibold font-heading text-gray-900 mb-2"
                                    >
                                        QR Codes
                                    </h3>
                                    <p class="text-sm text-gray-600">
                                        Generate and manage table QR codes
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Mobile Navigation Buttons - Overlaid -->
                <button
                    id="prev-btn-mobile"
                    class="absolute left-4 top-1/2 transform -translate-y-1/2 bg-white/80 backdrop-blur-sm shadow-lg rounded-full p-3 text-gray-600 hover:text-gray-800 hover:bg-white z-10"
                >
                    <svg
                        class="w-5 h-5"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M15 19l-7-7 7-7"></path>
                    </svg>
                </button>
                <button
                    id="next-btn-mobile"
                    class="absolute right-4 top-1/2 transform -translate-y-1/2 bg-white/80 backdrop-blur-sm shadow-lg rounded-full p-3 text-gray-600 hover:text-gray-800 hover:bg-white z-10"
                >
                    <svg
                        class="w-5 h-5"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M9 5l7 7-7 7"></path>
                    </svg>
                </button>
            </div>

            <!-- Dots Indicator -->
            <div class="flex justify-center mt-6 space-x-2">
                <button
                    class="carousel-dot w-3 h-3 bg-gray-600 rounded-full"
                    data-slide="0"></button>
                <button
                    class="carousel-dot w-3 h-3 bg-gray-300 rounded-full hover:bg-gray-500"
                    data-slide="1"></button>
                <button
                    class="carousel-dot w-3 h-3 bg-gray-300 rounded-full hover:bg-gray-500"
                    data-slide="2"></button>
            </div>
        </div>
    </section>

    <!-- Key Features Overview -->
    <section id="features" class="py-20 bg-gray-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center mb-16">
                <h2
                    class="text-3xl md:text-4xl font-bold font-heading text-gray-900 mb-4"
                >
                    Powerful Features to Grow Your Business
                </h2>
                <p class="text-xl text-gray-600 max-w-2xl mx-auto">
                    From menu creation to order management, we have you covered.
                </p>
            </div>
            <div class="grid md:grid-cols-3 gap-8 text-center">
                <div>
                    <h3
                        class="text-xl font-semibold font-heading text-gray-900 mb-2"
                    >
                        Menu Management
                    </h3>
                    <p class="text-gray-600">
                        Easily create, update, and organize your menus.
                    </p>
                </div>
                <div>
                    <h3
                        class="text-xl font-semibold font-heading text-gray-900 mb-2"
                    >
                        QR Code Ordering
                    </h3>
                    <p class="text-gray-600">
                        Contactless ordering for a safe and modern dining
                        experience.
                    </p>
                </div>
                <div>
                    <h3
                        class="text-xl font-semibold font-heading text-gray-900 mb-2"
                    >
                        Real-time Analytics
                    </h3>
                    <p class="text-gray-600">
                        Gain insights into your sales and customer preferences.
                    </p>
                </div>
            </div>
            <div class="text-center mt-12">
                <a
                    href="/features"
                    class="text-gray-700 font-semibold hover:underline"
                >
                    See All Features &rarr;
                </a>
            </div>
        </div>
    </section>

    <!-- Guest Experience -->
    <section class="py-20 bg-white">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="grid lg:grid-cols-2 gap-12 items-center">
                <div>
                    <h2
                        class="text-3xl md:text-4xl font-bold font-heading text-gray-900 mb-6"
                    >
                        Seamless Experience for Your Guests
                    </h2>
                    <p class="text-xl text-gray-600 mb-8">
                        Your customers will love the simple, mobile-friendly
                        ordering experience. No app downloads, no account
                        creation - just scan and order.
                    </p>

                    <div class="space-y-6">
                        <div class="flex items-start">
                            <div
                                class="w-8 h-8 bg-gray-100 rounded-full flex items-center justify-center mr-4 mt-1"
                            >
                                <svg
                                    class="w-4 h-4 text-gray-600"
                                    fill="none"
                                    stroke="currentColor"
                                    viewBox="0 0 24 24"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M5 13l4 4L19 7"></path>
                                </svg>
                            </div>
                            <div>
                                <h3
                                    class="text-lg font-semibold font-heading text-gray-900 mb-2"
                                >
                                    Instant Access
                                </h3>
                                <p class="text-gray-600">
                                    Guests scan QR code and immediately see your
                                    menu - no waiting, no downloads.
                                </p>
                            </div>
                        </div>

                        <div class="flex items-start">
                            <div
                                class="w-8 h-8 bg-gray-100 rounded-full flex items-center justify-center mr-4 mt-1"
                            >
                                <svg
                                    class="w-4 h-4 text-gray-600"
                                    fill="none"
                                    stroke="currentColor"
                                    viewBox="0 0 24 24"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M5 13l4 4L19 7"></path>
                                </svg>
                            </div>
                            <div>
                                <h3
                                    class="text-lg font-semibold font-heading text-gray-900 mb-2"
                                >
                                    Mobile-Friendly
                                </h3>
                                <p class="text-gray-600">
                                    Optimized for smartphones with easy
                                    navigation and clear item descriptions.
                                </p>
                            </div>
                        </div>

                        <div class="flex items-start">
                            <div
                                class="w-8 h-8 bg-gray-100 rounded-full flex items-center justify-center mr-4 mt-1"
                            >
                                <svg
                                    class="w-4 h-4 text-gray-600"
                                    fill="none"
                                    stroke="currentColor"
                                    viewBox="0 0 24 24"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M5 13l4 4L19 7"></path>
                                </svg>
                            </div>
                            <div>
                                <h3
                                    class="text-lg font-semibold font-heading text-gray-900 mb-2"
                                >
                                    Easy Ordering
                                </h3>
                                <p class="text-gray-600">
                                    Add items, review order, and place it with
                                    just a few taps. Simple and intuitive.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="bg-gray-100 rounded-lg p-8 text-center">
                    <div
                        class="bg-white rounded-lg p-6 shadow-sm max-w-sm mx-auto"
                    >
                        <h4 class="text-lg font-semibold text-gray-900 mb-4">
                            Sample Menu View
                        </h4>
                        <div class="space-y-3 text-left">
                            <div class="border-b pb-2">
                                <h5 class="font-medium text-gray-900">
                                    Appetizers
                                </h5>
                            </div>
                            <div class="flex justify-between">
                                <span class="text-gray-700">Bruschetta</span>
                                <span class="text-gray-900 font-medium">$8</span
                                >
                            </div>
                            <div class="flex justify-between">
                                <span class="text-gray-700">Calamari</span>
                                <span class="text-gray-900 font-medium"
                                    >$12</span
                                >
                            </div>
                            <div class="border-b pb-2 pt-2">
                                <h5 class="font-medium text-gray-900">
                                    Main Courses
                                </h5>
                            </div>
                            <div class="flex justify-between">
                                <span class="text-gray-700"
                                    >Pasta Carbonara</span
                                >
                                <span class="text-gray-900 font-medium"
                                    >$18</span
                                >
                            </div>
                        </div>
                        <button
                            class="w-full bg-gray-200 text-gray-800 py-2 rounded-md mt-4 text-sm hover:bg-gray-300 transition-colors"
                        >
                            Add to Order
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Free Trial Section -->
    <section class="py-20 bg-gray-50">
        <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
            <h2
                class="text-3xl md:text-4xl font-bold font-heading text-gray-900 mb-6"
            >
                Try letsorder Risk-Free
            </h2>
            <p class="text-xl text-gray-600 mb-8">
                Start your 30-day free trial today. No credit card required, no
                setup fees. Experience the full power of letsorder before you
                commit.
            </p>

            <div
                class="bg-white rounded-lg p-8 shadow-sm border max-w-md mx-auto mb-8"
            >
                <h3 class="text-2xl font-bold font-heading text-gray-900 mb-4">
                    30-Day Free Trial
                </h3>
                <ul class="text-left space-y-2 text-gray-600 mb-6">
                    <li class="flex items-center">
                        <svg
                            class="w-4 h-4 text-gray-600 mr-2"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M5 13l4 4L19 7"></path>
                        </svg>
                        Full access to all features
                    </li>
                    <li class="flex items-center">
                        <svg
                            class="w-4 h-4 text-gray-600 mr-2"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M5 13l4 4L19 7"></path>
                        </svg>
                        Up to 100 tables/rooms
                    </li>
                    <li class="flex items-center">
                        <svg
                            class="w-4 h-4 text-gray-600 mr-2"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M5 13l4 4L19 7"></path>
                        </svg>
                        Multiple manager accounts
                    </li>
                    <li class="flex items-center">
                        <svg
                            class="w-4 h-4 text-gray-600 mr-2"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M5 13l4 4L19 7"></path>
                        </svg>
                        No credit card required
                    </li>
                </ul>
            </div>

            <a
                href={adminRegisterUrl}
                class="bg-gray-700 text-white px-8 py-4 rounded-lg text-lg font-semibold hover:bg-gray-800 transition-colors inline-block"
            >
                Start Your Free Trial
            </a>
        </div>
    </section>
</Layout>
