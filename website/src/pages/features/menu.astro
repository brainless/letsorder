      const menuPrevBtn = document.getElementById('menu-prev-btn');
      const menuNextBtn = document.getElementById('menu-next-btn');
      
      // Mobile carousel
      const menuCarouselContainerMobile = document.getElementById('menu-carousel-container-mobile');
      const menuPrevBtnMobile = document.getElementById('menu-prev-btn-mobile');
      const menuNextBtnMobile = document.getElementById('menu-next-btn-mobile');
      
      // Shared elements
      const menuDots = document.querySelectorAll('.menu-carousel-dot');
      
      function updateMenuCarousel() {
        const translateX = -menuCurrentSlide * 100;
        
        // Update desktop carousel
        if (menuCarouselContainer) {
          menuCarouselContainer.style.transform = `translateX(${translateX}%)`;
        }
        
        // Update mobile carousel
        if (menuCarouselContainerMobile) {
          menuCarouselContainerMobile.style.transform = `translateX(${translateX}%)`;
        }
        
        // Update dots
        menuDots.forEach((dot, index) => {
          if (index === menuCurrentSlide) {
            dot.className = 'menu-carousel-dot w-3 h-3 bg-secondary-400 rounded-full';
          } else {
            dot.className = 'menu-carousel-dot w-3 h-3 bg-gray-300 rounded-full hover:bg-secondary-300';
          }
        });
      }
      
      function nextMenuSlide() {
        menuCurrentSlide = (menuCurrentSlide + 1) % menuTotalSlides;
        updateMenuCarousel();
      }
      
      function prevMenuSlide() {
        menuCurrentSlide = (menuCurrentSlide - 1 + menuTotalSlides) % menuTotalSlides;
        updateMenuCarousel();
      }
      
      // Desktop buttons
      if (menuNextBtn && menuPrevBtn) {
        menuNextBtn.addEventListener('click', nextMenuSlide);
        menuPrevBtn.addEventListener('click', prevMenuSlide);
      }
      
      // Mobile buttons
      if (menuNextBtnMobile && menuPrevBtnMobile) {
        menuNextBtnMobile.addEventListener('click', nextMenuSlide);
        menuPrevBtnMobile.addEventListener('click', prevMenuSlide);
      }
      
      // Dot navigation
      menuDots.forEach((dot, index) => {
        dot.addEventListener('click', () => {
          menuCurrentSlide = index;
          updateMenuCarousel();
        });
      });
      
      // Auto-advance carousel
      if (menuCarouselContainer || menuCarouselContainerMobile) {
        setInterval(nextMenuSlide, 6000);
      }
    });
  </script>
</Layout>