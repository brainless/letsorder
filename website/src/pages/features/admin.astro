  <!-- Carousel Script -->
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      let adminCurrentSlide = 0;
      const adminTotalSlides = 4;
      
      // Desktop carousel
      const adminCarouselContainer = document.getElementById('admin-carousel-container');
      const adminPrevBtn = document.getElementById('admin-prev-btn');
      const adminNextBtn = document.getElementById('admin-next-btn');
      
      // Mobile carousel
      const adminCarouselContainerMobile = document.getElementById('admin-carousel-container-mobile');
      const adminPrevBtnMobile = document.getElementById('admin-prev-btn-mobile');
      const adminNextBtnMobile = document.getElementById('admin-next-btn-mobile');
      
      // Shared elements
      const adminDots = document.querySelectorAll('.admin-carousel-dot');
      
      function updateAdminCarousel() {
        const translateX = -adminCurrentSlide * 100;
        
        // Update desktop carousel
        if (adminCarouselContainer) {
          adminCarouselContainer.style.transform = `translateX(${translateX}%)`;
        }
        
        // Update mobile carousel
        if (adminCarouselContainerMobile) {
          adminCarouselContainerMobile.style.transform = `translateX(${translateX}%)`;
        }
        
        // Update dots
        adminDots.forEach((dot, index) => {
          if (index === adminCurrentSlide) {
            dot.className = 'admin-carousel-dot w-3 h-3 bg-primary-400 rounded-full';
          } else {
            dot.className = 'admin-carousel-dot w-3 h-3 bg-gray-300 rounded-full hover:bg-primary-300';
          }
        });
      }
      
      function nextAdminSlide() {
        adminCurrentSlide = (adminCurrentSlide + 1) % adminTotalSlides;
        updateAdminCarousel();
      }
      
      function prevAdminSlide() {
        adminCurrentSlide = (adminCurrentSlide - 1 + adminTotalSlides) % adminTotalSlides;
        updateAdminCarousel();
      }
      
      // Desktop buttons
      if (adminNextBtn && adminPrevBtn) {
        adminNextBtn.addEventListener('click', nextAdminSlide);
        adminPrevBtn.addEventListener('click', prevAdminSlide);
      }
      
      // Mobile buttons
      if (adminNextBtnMobile && adminPrevBtnMobile) {
        adminNextBtnMobile.addEventListener('click', nextAdminSlide);
        adminPrevBtnMobile.addEventListener('click', prevAdminSlide);
      }
      
      // Dot navigation
      adminDots.forEach((dot, index) => {
        dot.addEventListener('click', () => {
          adminCurrentSlide = index;
          updateAdminCarousel();
        });
      });
      
      // Auto-advance carousel
      if (adminCarouselContainer || adminCarouselContainerMobile) {
        setInterval(nextAdminSlide, 6000);
      }
    });
  </script>
</Layout>