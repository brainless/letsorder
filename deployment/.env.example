# LetsOrder Deployment Environment Variables
# Copy this file to .env and fill in the actual values
# DO NOT commit the .env file to version control

# =============================================================================
# Scaleway Configuration (for server provisioning)
# =============================================================================
# Get these from your Scaleway console: https://console.scaleway.com/iam/api-keys
SCALEWAY_ACCESS_KEY=your_scaleway_access_key_here
SCALEWAY_SECRET_KEY=your_scaleway_secret_key_here
SCALEWAY_PROJECT_ID=your_scaleway_project_id_here
SCALEWAY_ZONE=fr-par-1

# =============================================================================
# SSL/HTTPS Configuration  
# =============================================================================
# SSL certificates are automatically managed by Let's Encrypt
# No manual configuration needed - certificates are detected automatically
# 
# To set up HTTPS, use: ./deployment/scripts/setup-letsencrypt.sh <server-ip> <ssh-key> <domain>

# =============================================================================
# S3-Compatible Storage Configuration (for database backups)
# =============================================================================
# Works with AWS S3, DigitalOcean Spaces, MinIO, or any S3-compatible service
AWS_ACCESS_KEY_ID=your_access_key_id_here
AWS_SECRET_ACCESS_KEY=your_secret_access_key_here
AWS_S3_BUCKET=letsorder-db

# S3-compatible endpoint URL (customize for your provider)
# AWS S3: https://s3.amazonaws.com (or regional like https://s3.eu-west-1.amazonaws.com)
# DigitalOcean Spaces: https://nyc3.digitaloceanspaces.com
# MinIO: https://your-minio-server.com
# Scaleway Object Storage: https://s3.fr-par.scw.cloud
S3_ENDPOINT=https://s3.amazonaws.com

# Legacy AWS region setting (optional, mainly for AWS S3)
AWS_DEFAULT_REGION=eu-west-1

# =============================================================================
# Server Configuration
# =============================================================================
# Production server details
SERVER_HOST=api.letsorder.app
SERVER_IP=your_server_ip_here
SSH_KEY_PATH=~/.ssh/id_rsa

# Admin and menu app URLs (for CORS configuration)
ADMIN_APP_URL=https://admin.letsorder.app
MENU_APP_URL=https://menu.letsorder.app

# =============================================================================
# Application Configuration
# =============================================================================
# JWT secret for authentication (generate a strong random string)
JWT_SECRET=your_very_long_and_secure_jwt_secret_here_at_least_32_characters

# Database configuration
DATABASE_URL=sqlite:/opt/letsorder/data/letsorder.db

# Logging level (debug, info, warn, error)
RUST_LOG=info

# =============================================================================
# Monitoring and Alerting (Optional)
# =============================================================================
# Sentry DSN for error monitoring
SENTRY_DSN=your_sentry_dsn_here

# Slack webhook for deployment notifications
SLACK_WEBHOOK_URL=your_slack_webhook_url_here

# =============================================================================
# Example Values (for reference)
# =============================================================================
# SCALEWAY_ACCESS_KEY=SCW1234567890ABCDEF
# SCALEWAY_SECRET_KEY=abcd1234-5678-90ef-ghij-klmnop123456
# SSL certificates are handled automatically by Let's Encrypt
# AWS_ACCESS_KEY_ID=AKIA1234567890ABCDEF
# AWS_SECRET_ACCESS_KEY=abcd1234567890efghijklmnopqrstuvwxyz1234
# SERVER_IP=1.2.3.4
# JWT_SECRET=super_secret_jwt_key_that_is_very_long_and_secure_for_production_use
