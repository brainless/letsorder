---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Menu - Restaurant">
	<div class="space-y-6">
		<header class="text-center">
			<h1 class="text-2xl font-bold text-gray-900 mb-2">Welcome to our Restaurant</h1>
			<p class="text-gray-600 text-sm">Browse our menu and place your order</p>
		</header>

		<div class="bg-white rounded-lg shadow-sm border border-gray-200 p-4">
			<h2 class="text-lg font-semibold mb-3">Menu</h2>
			<p class="text-gray-500 text-center py-8">Loading menu items...</p>
		</div>

		<div class="bg-white rounded-lg shadow-sm border border-gray-200 p-4">
			<h2 class="text-lg font-semibold mb-3">Your Order</h2>
			<p class="text-gray-500 text-center py-4">No items in cart</p>
		</div>
	</div>
</Layout>
