---
import AddToCartButton from './AddToCartButton.astro';

export interface Props {
  id: number;
  name: string;
  description: string;
  price: number;
  sectionName?: string;
  onAdd?: () => void;
}

const { id, name, description, price, sectionName } = Astro.props;
---

<div class="border-b border-gray-100 pb-3 last:border-b-0">
  <div class="flex justify-between items-start">
    <div class="flex-1">
      <h3 class="font-medium text-gray-900">{name}</h3>
      <p class="text-sm text-gray-600 mt-1">{description}</p>
    </div>
    <div class="ml-4 text-right">
      <p class="font-semibold text-gray-900">${price.toFixed(2)}</p>
      <div class="mt-1">
        <AddToCartButton 
          id={id}
          name={name}
          description={description}
          price={price}
          sectionName={sectionName}
        />
      </div>
    </div>
  </div>
</div>
