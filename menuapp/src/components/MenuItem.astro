---
export interface Props {
  id: number;
  name: string;
  description: string;
  price: number;
  onAdd?: () => void;
}

const { id, name, description, price } = Astro.props;
---

<div class="border-b border-gray-100 pb-3 last:border-b-0">
  <div class="flex justify-between items-start">
    <div class="flex-1">
      <h3 class="font-medium text-gray-900">{name}</h3>
      <p class="text-sm text-gray-600 mt-1">{description}</p>
    </div>
    <div class="ml-4 text-right">
      <p class="font-semibold text-gray-900">${price.toFixed(2)}</p>
      <button 
        class="mt-1 bg-blue-600 hover:bg-blue-700 text-white text-xs font-medium py-1 px-3 rounded-md transition-colors focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-1"
        data-item-id={id}
        data-item-name={name}
        data-item-price={price}
      >
        Add
      </button>
    </div>
  </div>
</div>
