---
import RetryButton from './RetryButton.astro';

export interface Props {
  title?: string;
  message?: string;
  showRetry?: boolean;
  showDetails?: boolean;
  errorId?: string;
}

const { 
  title = "Something went wrong",
  message = "We encountered an unexpected error. Please try refreshing the page or contact restaurant staff for assistance.",
  showRetry = true,
  showDetails = false,
  errorId = Math.random().toString(36).substr(2, 9)
} = Astro.props;
---

<div class="min-h-screen flex items-center justify-center px-4">
  <div class="max-w-md w-full text-center">
    <div class="mb-6">
      <svg class="mx-auto h-16 w-16 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 9v3.75m9-.75a9 9 0 11-18 0 9 9 0 0118 0zm-9 3.75h.008v.008H12v-.008z"></path>
      </svg>
    </div>

    <h1 class="text-xl font-semibold text-gray-900 mb-4">{title}</h1>
    
    <p class="text-gray-600 mb-8 leading-relaxed">{message}</p>

    <div class="space-y-4">
      {showRetry && (
        <div class="space-y-3">
          <RetryButton 
            onclick="window.location.reload()" 
            className="w-full justify-center" 
          />
          
          <div class="text-sm text-gray-500 space-x-4">
            <button
              onclick="history.back()"
              class="text-blue-600 hover:text-blue-700 underline"
            >
              Go Back
            </button>
            <span>â€¢</span>
            <a
              href="/"
              class="text-blue-600 hover:text-blue-700 underline"
            >
              Go Home
            </a>
          </div>
        </div>
      )}
    </div>

    {showDetails && (
      <div class="mt-8 p-4 bg-gray-50 rounded-lg">
        <details class="text-left">
          <summary class="font-medium text-gray-900 cursor-pointer hover:text-gray-700">
            Technical Details
          </summary>
          <div class="mt-3 text-sm text-gray-600">
            <p><strong>Error ID:</strong> {errorId}</p>
            <p><strong>Time:</strong> <span id="error-timestamp"></span></p>
            <p><strong>Page:</strong> <span id="error-page"></span></p>
          </div>
        </details>
      </div>
    )}

    <div class="mt-8 p-4 bg-red-50 rounded-lg">
      <h3 class="font-medium text-red-900 mb-2">Need immediate help?</h3>
      <p class="text-sm text-red-800">
        Please let restaurant staff know about this error. 
        They can help you place your order directly or provide a fresh QR code.
      </p>
    </div>
  </div>
</div>

<script>
  // Populate timestamp and page URL for error details
  document.addEventListener('DOMContentLoaded', () => {
    const timestampEl = document.getElementById('error-timestamp');
    const pageEl = document.getElementById('error-page');
    
    if (timestampEl) {
      timestampEl.textContent = new Date().toLocaleString();
    }
    
    if (pageEl) {
      pageEl.textContent = window.location.href;
    }
  });
</script>